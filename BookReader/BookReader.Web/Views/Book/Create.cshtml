@using BookReader.Web.Helpers;
@model BookReader.Web.ViewModels.Book.BookViewModel

<div class="content">
	<div class="form-title">
		<h2>Add new book</h2>

	</div>
	<form class="form-horizontal col-md-4" asp-controller="Book" asp-action="Create" method="post">
		@Html.DisplayTextFor(model => model.AuthorName)
		@Html.TextBoxFor(model => model.AuthorName, new { @class = "hidden" })
		<div class="form-group">
			@Html.TextBoxFor(model => model.AuthorId, new { @class = "hidden" })
			@Html.LabelFor(model => model.Title, new { @class = "col-md-3" })
			@Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Description, new { @class = "col-md-3" })
			@Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.GenreId, new { @class = "col-md-3" })
			@Html.DropDownListFor(model => model.GenreId, Model.Genres, new { @class = "form-control" })
		</div>
		<div class="pull-right">
			<button type="submit" class="btn btn-primary">Create</button>
			<a href="@Url.Action("Details", "Author", new { Id = Model.AuthorId})" class="btn btn-default">Cancel</a>
		</div>
	</form>
</div>
