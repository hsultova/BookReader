@model BookReader.Web.ViewModels.Genre.GenreViewModel

<div class="content">
	<div class="form-title">
		<h2>Add new genre</h2>
	</div>
	<form class="form-horizontal col-md-4" asp-controller="Genre" asp-action="Create" method="post">
		<div class="form-group">
			@Html.LabelFor(model => model.Name, new { @class = "col-md-3" })
			@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
			@Html.ValidationMessage("DuplicateGenreName", null, new { @class = "text-danger" })
		</div>		
		<div class="pull-right">
			<button type="submit" class="btn btn-primary">Create</button>
			<a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>
		</div>
	</form>
</div>