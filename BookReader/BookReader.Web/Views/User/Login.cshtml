@model BookReader.Web.ViewModels.LoginViewModel

<div class="content">
	<div class="form-title">
		<h2>Login</h2>
	</div>
	<form class="form-horizontal col-md-4" asp-controller="User" asp-action="Login" method="post">
		<div class="form-group">
			@Html.LabelFor(model => model.Email, new { @class = "col-md-3" })
			@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Password, new { @class = "col-md-3" })
			@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
			@Html.ValidationMessage("InvalidLogin", null, new { @class = "text-danger" })
		</div>
		<div class="pull-right">
			<button type="submit" class="btn btn-primary">Login</button>
			<a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>
		</div>
	</form>
</div>
